<div class="container">
    <h1 class="mt-4 mb-4">NEW POST</h1>
    <form action="/posting" method="POST" enctype="multipart/form-data">
        <div class="form-group">
            <label for="title-input">Please put your title here.</label>
            <input type="text" name="title" id="title-input" class="form-control" required>
        </div>
        <div class="form-group">
            <label for="image">Please upload your image here.</label>
            <input type="file" name="image" id="image" accept="image/*" required>
        </div>
        <div class="form-group">
            <label for="description">Please describe your thoughts here.</label>
            <textarea name="description" id="description" class="form-control"></textarea>
        </div>
        <button type="submit" class="btn btn-success">UPLOAD</button>
        <a href="/" class="btn btn-danger">CANCEL</a>
    </form>
</div>